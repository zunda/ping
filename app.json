{
  "name":"ping",
  "description":"A Heroku app to measure latency from client to the server",
  "scripts":{
    "postdeploy":"bundle exec rake db:migrate"
  },
  "env":{
    "LANG":{
      "required":true
    },
    "RACK_ENV":{
      "required":true
    },
    "RAILS_ENV":{
      "required":true
    },
    "RAILS_SERVE_STATIC_FILES":{
      "required":true
    },
    "SECRET_KEY_BASE":{
      "required":true
    }
  },
  "addons":[
    "heroku-postgresql"
    "heroku-redis"
  ]
}
