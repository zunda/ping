{
  "name":"ping",
  "description":"A Heroku app to measure latency from client to the server",
  "scripts":{
    "postdeploy":"bundle exec rake db:migrate"
  },
  "env":{
    "RACK_ENV":"production",
    "RAILS_ENV":"production",
    "RAILS_SERVE_STATIC_FILES":"enabled",
    "SECRET_KEY_BASE":{
      "generator":"secret"
    }
  },
  "addons":[
    "heroku-postgresql",
    "heroku-redis",
    "scheduler"
  ]
  "environments": {
    "test": {
      "env":{
        "RACK_ENV":"test",
        "RAILS_ENV":"test",
        "RAILS_SERVE_STATIC_FILES":"enabled",
        "SECRET_KEY_BASE":{
          "generator":"secret"
        }
      }
    }
  }
}
